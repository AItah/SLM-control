{
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}"
  ],

  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#d000d0",
    "editorBracketHighlight.foreground2": "#ffa500",
    "editorBracketHighlight.foreground3": "#009999",
    "editorBracketHighlight.foreground4": "#dd0000",
    "editorBracketHighlight.foreground5": "#00aa00",
    "editorBracketHighlight.foreground6": "#0000dd",

    "editorIndentGuide.background1": "#525838",
    "editorIndentGuide.activeBackground1": "#eaee1a"
  },

  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.language.colorizedBracketPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],

  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,

  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
}
